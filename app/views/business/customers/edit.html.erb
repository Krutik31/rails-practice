<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>
  <h3 class="text-center">(<%= @customer.first_name %> <%= @customer.last_name %>)</h3>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

      <% if @customer.errors.any? %>
        <hr>
        <div style="color:red;">
          <h5><%= @customer.errors.count %> errors found.</h5>
          <ul>
            <% @customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <hr>
      <%= render partial: "form", locals: { customer: @customer, submit_btn: "Update Customer", url: "business_customer_path" } %>

    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
