<div class="container-fluid">

  <h2 class="text-center">Add New Item</h2>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

    <% if @item.errors.any? %>
      <hr>
      
      <div style="color:red;">
        <h5><%= @item.errors.count %> errors found.</h5>
        <ul>
          <% @item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <hr>
      <%= render partial: "form", locals: { item: @item, submit_btn: "Create Item" } %>
      
    </div>
    <div class="col-3">
    </div>
  </div>
    
</div>
