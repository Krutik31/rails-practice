<!DOCTYPE html>
<html>
  <head>
    <title>RailsPractice</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  </head>

  <body>
    <% if %w[faculties students].any? { |i| i == controller.controller_name } %>
      <br>
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6 rounded" style="border: 3px solid #007fff!important">
            <h3 class="text-primary text-center">-: Callbacks :-</h3>
            <% $callback.each do |k, v| %>
              <hr><h5><strong><%= k %> method:</strong></h5>
              <ul>
                <% $callback[k].each do |value| %>
                  <li><%= value.keys[0] %> : <%= value.values[0] %></li>
                <% end %>
              </ul>
            <% end %>
        </div>
        <div class="col-3"></div>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
