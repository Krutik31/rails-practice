<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>
  <h3 class="text-center">(<%= @event.name %>)</h3>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

      <% if @event.errors.any? %>
        <hr>
        <div style="color:red;">
          <h5><%= @event.errors.count %> errors found.</h5>
          <ul>
            <% @event.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <hr>
      <%= render partial: "form", locals: { event: @event, categories: @categories, submit_btn: "Update Event" } %>

    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
