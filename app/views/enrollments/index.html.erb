<div class="container-fluid text-center">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="w-50 bg-dark mx-auto text-light">
        <%=flash[:notice]%>
      </div>
      <br>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th colspan="6"><h3>List of Events</h3></th>
          </tr>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Event Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% n = 1 %>
          <% @events.each do |event| %>
            <% unless @enrolled_events.include?(event.id) %>
              <tr>
                <td><%= n %></td>
                <td><%= event.name %></td>
                <td><%= event.description %></td>
                <td><%= event.category.category_name %></td>
                <td><%= event.event_date %></td>
                <td>
                  <%= link_to "Comments", show_comments_path(event.id), class:"btn btn-dark btn-sm" %>
                  &nbsp;&nbsp;
                  <%= link_to "Enroll", create_enrollment_path(event.id), class:"btn btn-success btn-sm" %>
                </td>
              </tr>
              <% n +=1 %>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="row col-12 justify-content-center"> 
        <%= link_to "Back", users_path, class:"btn btn-sm btn-danger float-left" %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>
