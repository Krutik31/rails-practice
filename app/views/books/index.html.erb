<div class="container-fluid text-center">

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th colspan="4"><h3>Books by <%= @author.first_name %> <%= @author.last_name %></h3></th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.id %></td>
              <td><%= book.name %></td>
              <td><%= book.price %></td>
              <td>
                <%= link_to "Edit", edit_author_book_path(@author, book), class:"btn btn-warning btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Destroy", author_book_path(@author, book), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <hr>
      <div class="row"> 
        <div class="col-6">
          <%= link_to "Add New Book", new_author_book_path(@author), class:"btn btn-primary btn-sm float-left" %>
        </div>
        <div class="col-6">
          <%= link_to "Back", authors_path, class:"btn btn-danger btn-sm float-right" %>
        </div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>
