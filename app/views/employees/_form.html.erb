<%= form_with model: employee do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Enter firstname" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Enter lastname" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class:"form-control", placeholder:"Enter email address" %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class:"form-control", placeholder:"Enter Age", min: 18 %>
  </div>

  <div class="form-group">
    <%= form.label :no_of_order %>
    <%= form.number_field :no_of_order, class:"form-control", placeholder:"Enter no of orders", min: 0 %>
  </div>

  <div class="form-group">
    Full Time Available: 
    <%= form.radio_button :full_time_available, "true" %>
    <%= form.label :full_time_available_true, "Yes" %>
    <%= form.radio_button :full_time_available, "false" %>
    <%= form.label :full_time_available_false, "No" %>
  </div>

  <div class="form-group">
    <%= form.label :salary %>
    <%= form.number_field :salary, class:"form-control", placeholder:"Enter salary" %>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", get_all_employees_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>