<div class="container-fluid">
  <br>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th colspan="2"><h4><%= @employee.first_name %> <%= @employee.last_name %></h4></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>Firstname</th>
            <td><%= @employee.first_name %></td>
          </tr>
          <tr>
            <th>Lastname</th>
            <td><%= @employee.last_name %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @employee.email %></td>
          </tr>
          <tr>
            <th>Age</th>
            <td><%= @employee.age %></td>
          </tr>
          <tr>
            <th>No of Orders</th>
            <td><%= @employee.no_of_order %></td>
          </tr>
          <tr>
            <th>Full Time Available</th>
            <td><%= @employee.full_time_available ? 'Yes' : 'No' %></td>
          </tr>
          <tr>
            <th>Salary</th>
            <td><%= @employee.salary %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-12">
          <%= link_to "Back", get_all_employees_path, class:"btn btn-sm btn-danger float-right" %>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>

</div>
