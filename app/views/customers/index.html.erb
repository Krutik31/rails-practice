<div class="container-fluid text-center">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">

      <div class="row">
        <div class="col-3">
          <%= link_to "most sales product by quantity...", customer_task_path(1), class:"btn btn-sm btn-dark" %>
        </div>
        <div class="col-3">
          <%= link_to "most sales product by price...", customer_task_path(2), class:"btn btn-sm btn-dark" %>
        </div>
        <div class="col-3">
          <%= link_to "most booked order of product...", customer_task_path(3), class:"btn btn-sm btn-dark" %>
        </div>
        <div class="col-3">
          <%= link_to "most canceled order of product...", customer_task_path(4), class:"btn btn-sm btn-dark" %>
        </div>
      </div>
      <hr>

      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th colspan="6"><h3>List of Customers</h3></th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.first_name %></td>
              <td><%= customer.last_name %></td>
              <td><%= customer.email %></td>
              <td><%= customer.phone_number %></td>
              <td>
                <%= link_to "Edit", edit_customer_path(customer), class:"btn btn-warning btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Destroy", customer_path(customer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row col-12 justify-content-center">
          <%= link_to "Items", items_path, class:"btn btn-dark btn-sm" %>
          &nbsp;&nbsp;
          <%= link_to "Add new Customer", new_customer_path, class:"btn btn-primary btn-sm float-left" %>
          &nbsp;&nbsp;
          <%= link_to "Orders", orders_path, class:"btn btn-dark btn-sm" %>
      </div>
      <hr>

    </div>
    <div class="col-2"></div>
  </div>
</div>
