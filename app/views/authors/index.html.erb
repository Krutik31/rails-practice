<div class="container-fluid text-center">

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th colspan="3"><h3>List of Authors</h3></th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td><%= author.id %></td>
              <td><%= author.first_name %></td>
              <td>
                <%= link_to "View", author_path(author), class:"btn btn-success btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Edit", edit_author_path(author), class:"btn btn-warning btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Destroy", author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "View Books", author_books_path(author), class:"btn btn-info btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row col-12 justify-content-center"> 
        <%= link_to "Add new Author", new_author_path(), class:"btn btn-primary float-left" %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>
