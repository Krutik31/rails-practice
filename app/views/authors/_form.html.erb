<%= form_with model: author do |form| %>
  <div class="form-group">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Enter firstname" %>
    
    <%= render :partial => "error_message", locals: { author: author, field: :first_name } %>

  </div>

  <div class="form-group">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Enter lastname" %>
    
    <%= render :partial => "error_message", locals: { author: author, field: :last_name } %>

  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %><br>
    <%= form.date_field :date_of_birth, class:"form-control" %>
    
    <%= render :partial => "error_message", locals: { author: author, field: :date_of_birth } %>

  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.email_field :email, class:"form-control", placeholder:"Enter email address" %>
    
    <%= render :partial => "error_message", locals: { author: author, field: :email } %>

  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", authors_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>