<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>
  <h3 class="text-center">(<%= @car.car_name %>)</h3>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <%= render partial: "logout" %>
      <% if @car.errors.any? %>
        <hr>
        <div style="color:red;">
          <h5><%= @car.errors.count %> errors found.</h5>
          <ul>
            <% @car.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <hr>
      <%= render partial: "form", locals: { car: @car, submit_btn: "Update Car" } %>

    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
