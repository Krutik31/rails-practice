<div class="container-fluid text-center">
  <br>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">

      <%= render partial: "logout" %>

      <div class="row">
        <div class="mx-auto">
          <%= form_with url: "/car/search", method: :get do |form| %>
            <%= form.text_field :search_car_name, placeholder:"Search car"  %>
            <%= form.submit "Search", class:"btn btn-sm btn-success" %>
          <% end %>
        </div>
      </div>
      <br>

      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th colspan="4"><h3>List of Cars</h3></th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cars.each do |car| %>
            <tr>
              <td><%= car.id %></td>
              <td><%= car.car_name %></td>
              <td><%= car.price %></td>
              <td>
                <%= link_to "View", car_path(car), class:"btn btn-success btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Edit", edit_car_path(car), class:"btn btn-warning btn-sm" %>
                &nbsp;&nbsp;
                <%= link_to "Destroy", car_path(car), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row"> 
        <div class="col-6">
          <%= link_to "Add new Car", new_car_path, class:"btn btn-primary float-left" %>
        </div>
        <div class="col-6">
          <%= link_to "All cars...", cars_path, class:"float-right" %>
        </div>
      </div>

    </div>
    <div class="col-2"></div>
  </div>
</div>
