<%= form_with model: car do |form| %>
  <div class="form-group">
    <%= form.label :car_name %>
    <%= form.text_field :car_name, class:"form-control", placeholder:"Enter carname" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class:"form-control", placeholder:"Enter price" %>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", cars_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>