<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <%= form_with model: @address do |form| %>
        <div class="form-group">
          <%= form.label :address_line1 %>
          <%= form.text_field :address_line1, class:"form-control", placeholder:"Enter Addressline1" %>
        </div>

        <div class="form-group">
          <%= form.label :address_line2 %>
          <%= form.text_field :address_line2, class:"form-control", placeholder:"Enter Addressline2" %>
        </div>

        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class:"form-control", placeholder:"Enter City" %>
        </div>

        <div class="form-group">
          <%= form.label :pincode %>
          <%= form.text_field :pincode, class:"form-control", placeholder:"Enter Pincode" %>
        </div>
        
        <div class="row">
          <div class="col-6">
            <%= form.submit value:"Update Address", class:"btn btn-sm btn-success float-left" %>
          </div>
          <div class="col-6">
            <%= link_to "Back", profiles_path, class:"btn btn-sm btn-danger float-right" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
