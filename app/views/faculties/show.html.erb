<div class="container-fluid">
  <br>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <table class="table table-hover table-bordered text-center">
        <thead>
          <tr>
            <th colspan="2"><h4><%= @faculty.first_name %> <%= @faculty.last_name %></h4></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>Firstname</th>
            <td><%= @faculty.first_name %></td>
          </tr>
          <tr>
            <th>Lastname</th>
            <td><%= @faculty.last_name %></td>
          </tr>
          <tr>
            <th>Date of Birth</th>
            <td><%= @faculty.dob %></td>
          </tr>
          <tr>
            <th>Age</th>
            <td><%= @faculty.age %></td>
          </tr>
          <tr>
            <th>Department</th>
            <td><%= @faculty.department %></td>
          </tr>
          <tr>
            <th>Phone number</th>
            <td><%= @faculty.phone_number %></td>
          </tr>
          <tr>
            <th>Email ID</th>
            <td><%= @faculty.email %></td>
          </tr>
          <tr>
            <th>Designation</th>
            <td><%= @faculty.designation %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-6">
          <%= link_to "Back", faculties_path, class:"btn btn-sm btn-danger float-left" %>
        </div>
        <div class="col-6">
          <%= link_to "Edit", edit_faculty_path(@faculty), class:"btn btn-primary btn-sm float-right" %>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>

</div>
