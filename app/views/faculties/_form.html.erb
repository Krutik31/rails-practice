<%= form_with model: faculty do |form| %>
  <div class="form-group">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Enter firstname" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Enter lastname" %>
  </div>

  <div class="form-group">
    <%= form.label :dob, "Date of Birth" %><br>
    <%= form.date_field :dob, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :department %><br>
    <%= form.select :department, Faculty::DEPTS, {}, {class: "form-control"}%>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number, class:"form-control", placeholder:"Enter Phonenumber" %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.email_field :email, class:"form-control", placeholder:"Enter email address" %>
  </div>

  <div class="form-group">
    <%= form.label :designation %><br>
    <%= form.select :designation, Faculty::DESIGNATIONS, {}, {class: "form-control"}%>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", faculties_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>