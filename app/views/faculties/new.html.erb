<div class="container-fluid">

  <h2 class="text-center">Add New Faculty</h2>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

      <% if @faculty.errors.any? %>
      <hr>
        <div style="color:red;">
          <h5><%= @faculty.errors.count %> errors found.</h5>
          <ul>
            <% @faculty.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <hr>
      <%= render partial: "form", locals: { faculty: @faculty, submit_btn: "Create Faculty" } %>
      
    </div>
    <div class="col-3">
    </div>
  </div>
    
</div>
