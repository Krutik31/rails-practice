<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>
  <h3 class="text-center">(<%= @faculty.first_name %> <%= @faculty.last_name %>)</h3>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

    <% if @faculty.errors.any? %>
      <hr>
      
      <div style="color:red;">
        <h5><%= @faculty.errors.count %> errors found.</h5>
        <ul>
          <% @faculty.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <hr>
      
      <%= render partial: "form", locals: { faculty: @faculty, submit_btn: "Update Faculty" } %>

    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
