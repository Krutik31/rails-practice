<div class="container-fluid">

  <h2 class="text-center">Update Informations</h2>
  <h3 class="text-center">(<%= @student.first_name %> <%= @student.last_name %>)</h3>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">

      <% if @student.errors.any? %>
        <hr>
        <div style="color:red;">
          <h5><%= @student.errors.count %> errors found.</h5>
          <ul>
            <% @student.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <hr>
      <%= render partial: "form", locals: { student: @student, submit_btn: "Update Student" } %>

    </div>
    <div class="col-3">
    </div>
  </div>
  
</div>
